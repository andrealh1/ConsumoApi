<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerApis.Xamarin.PublicacionesPage"
             Title="Publicaciones">
             
    
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listPublicaciones">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Id}"/>
                            <Label Text="{Binding Usuario}"/>
                            <Label Text="{Binding Descripcion}"/>
                            <Label Text="{Binding FechaPublicacion}"/>
                            <Label Text="{Binding MeGusta}"/>
                            <Label Text="{Binding MeDisgusta}"/>
                            <Label Text="{Binding VecesCompartido}"/>
                            <Label Text="{Binding EsPrivada}"/>
                         </StackLayout>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>